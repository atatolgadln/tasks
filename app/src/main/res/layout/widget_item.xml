<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/widgetCheckIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_outline"
        android:layout_marginEnd="12dp"
        android:contentDescription="Tamamla"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widgetIlacIsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlaç Adı"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/widgetIlacDetay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detaylar"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</LinearLayout>